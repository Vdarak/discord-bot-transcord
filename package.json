{
  "name": "discord-voice-transcription-bot",
  "version": "1.0.0",
  "description": "A Discord.js v14 bot that records voice channels, transcribes with AssemblyAI, and summarizes with Google Gemini",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "node --watch index.js",
    "deploy": "railway up",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "discord",
    "bot",
    "voice-recording",
    "transcription",
    "assemblyai",
    "gemini",
    "railway"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@discordjs/voice": "^0.17.0",
    "@google/generative-ai": "^0.17.0",
    "assemblyai": "^4.18.2",
    "discord.js": "^14.14.1",
    "dotenv": "^16.4.0",
    "fs-extra": "^11.2.0",
    "opusscript": "^0.0.8",
    "prism-media": "^1.3.5",
    "tweetnacl": "^1.0.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "railway": {
    "build": {
      "command": "npm install"
    },
    "deploy": {
      "startCommand": "npm start"
    }
  }
}
